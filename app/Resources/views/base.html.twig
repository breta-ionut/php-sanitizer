{# The base template of the application. All other templates should inherit from it. #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    
    <title>
        {% block title %} PHPSanitizer Application {% endblock %}
    </title>
    
    {# The CSS libraries used on a page. Register the defaults. #}
    {% block stylesheets_libs %}
        {% stylesheets filter='cssrewrite' output='compiled/css-libs.base.css'
            'libs/bootstrap/css/bootstrap.css' %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
    {% endblock %}
    
    {# The CSS files used on a page. Register the defaults. #}
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite' output='compiled/css.base.css'
            'css/default.css' %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
    {% endblock %}
    
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    
    {# Custom fonts. #}
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300' rel='stylesheet' type='text/css'>
</head>
<body>
    {% block body %} {% endblock %}
    
    {# The javascript libraries used on a page. Register the defaults. #}
    {% block javascripts_libs %}
        {% javascripts output='compiled/js-libs.base.js'
            'libs/jquery/jquery.js'
            'libs/bootstrap/js/bootstrap.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
    
    {# The javascript files used on a page. Register the defaults. #}
    {% block javascripts %}
        {% javascripts output='compiled/js.base.js'
            'js/base.js'
            'js/executor.js'
            'js/app.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>
